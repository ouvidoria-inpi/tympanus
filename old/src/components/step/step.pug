mixin step(labelClass, vertical=false, total = 4, initial = 1, scroll=true, position="left", type=false)
  - let componentClass = [prefix + "step", attributes.class]
  - total = attributes.total ?  attributes.total : 5
  - initial = attributes.initial ? attributes.initial : 1
  div(
    id=attributes.id
    data-initial=initial
    data-label=attributes.position
    data-scroll=attributes.scroll
    data-type=attributes.type
    class=componentClass)
    .step-progress
      - let n = 1;
      while n <= total
        if ( n == total && attributes.type == "false")
          if attributes['tooltip-text']
            button(class="step-progress-btn" type="button" data-tooltip-text=`Exemplo de Rótulo ${n}` disabled)
              span.step-info=`Exemplo de Rótulo ${n}`
          else
            button(class="step-progress-btn" type="button" disabled)
              span.step-info=`Exemplo de Rótulo ${n}`
        else
          if attributes['tooltip-text']
            button(class="step-progress-btn" type="button" data-tooltip-text=`Exemplo de Rótulo ${n}`)
              span.step-info=`Exemplo de Rótulo ${n}`
          else
            button(class="step-progress-btn" type="button")
              span.step-info=`Exemplo de Rótulo ${n}`
        - n++


mixin step-icon(labelClass, vertical=false,  initial = 1, scroll=true, position="left")
  - let componentClass = [prefix + "step", attributes.class]
  - initial = attributes.initial ? attributes.initial : 1
  - className = className ? componentClass + " " + className : componentClass
  div(
    id=attributes.id
    data-initial=initial
    data-label=attributes.position
    data-scroll=attributes.scroll
    class=componentClass)
    .step-progress
        if attributes['tooltip-text']
          button(class="step-progress-btn" type="button" data-tooltip-text="Acesse sua Conta" )
            span.step-info Acesse sua Conta
            i.step-icon.fas.fa-lock(aria-hidden="true")
          button(class="step-progress-btn" type="button" data-tooltip-text="Dados da entrega")
            span.step-info Dados da entrega
            i.step-icon.fas.fa-truck(aria-hidden="true")
          button(class="step-progress-btn" type="button" data-tooltip-text="Dados de Pagamento" )
            span.step-info Dados de Pagamento
            i.step-icon.far.fa-credit-card(aria-hidden="true")
          button(class="step-progress-btn" type="button" data-tooltip-text="Finalizar" disabled)
            span.step-info Finalizar
            i.step-icon.fas.fa-check(aria-hidden="true")
        else
          button(class="step-progress-btn" type="button")
            span.step-info Acesse sua Conta
            i.step-icon.fas.fa-lock(aria-hidden="true")
          button(class="step-progress-btn" type="button")
            span.step-info Dados da entrega
            i.step-icon.fas.fa-truck(aria-hidden="true")
          button(class="step-progress-btn" type="button")
            span.step-info Dados de Pagamento
            i.step-icon.far.fa-credit-card(aria-hidden="true")
          button(class="step-progress-btn" type="button" disabled)
            span.step-info Finalizar
            i.step-icon.fas.fa-check(aria-hidden="true")

mixin step-alert(labelClass, vertical=false,  initial = 2, scroll=true, position="right", type=false)
  - let componentClass = [prefix + "step", attributes.class]
  - initial = attributes.initial ? attributes.initial : 1
  - className = className ? componentClass + " " + className : componentClass
  div(
    id=attributes.id
    data-initial=initial
    data-label=attributes.position
    data-scroll=attributes.scroll
    data-type=attributes.type
    class=componentClass)
    .step-progress
        if attributes['tooltip-text']
          button(class="step-progress-btn" type="button" data-tooltip-text="Acesse sua Conta" data-alert="success" )
            span.step-info Acesse sua Conta
            span.step-alert
          button(class="step-progress-btn" type="button" data-tooltip-text="Dados da entrega" data-alert="info")
            span.step-info Dados da entrega
            span.step-alert
          button(class="step-progress-btn" type="button" data-tooltip-text="Dados de Pagamento" data-alert="danger")
            span.step-info Dados de Pagamento
            span.step-alert
          button(class="step-progress-btn" type="button" data-tooltip-text="Finalizar" disabled data-alert="warning")
            span.step-info Finalizar
            i.step-icon.fas.fa-check(aria-hidden="true")
            span.step-alert
        else
          button(class="step-progress-btn" type="button" data-alert="success" )
            span.step-info Acesse sua Conta
            span.step-alert
          button(class="step-progress-btn" type="button" data-alert="info")
            span.step-info Dados da entrega
            span.step-alert
          button(class="step-progress-btn" type="button" data-alert="danger")
            span.step-info Dados de Pagamento
            span.step-alert
          button(class="step-progress-btn" type="button" disabled data-alert="warning")
            span.step-info Finalizar
            i.step-icon.fas.fa-check(aria-hidden="true")
            span.step-alert

