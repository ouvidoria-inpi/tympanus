mixin list
  .br-list&attributes(attributes)
    if block
      block

mixin list-header(header)
  .header&attributes(attributes)
    .title= header
    if block
      block

mixin list-item
  if attributes["data-link"]
    a.br-item(href="javascript:void(0);" class=attributes.class)
      if block
        block
  else
    .br-item&attributes(attributes)
      if block
        block

