mixin input(label="Label / Rótulo")
  div(class=[prefix + "input", attributes.class]
    data-success = attributes.dataSuccess
    data-danger = attributes.dataDanger
    data-warning = attributes.dataWarning
    
    data-info = attributes.dataInfo)
    label(for = attributes.id
      class = attributes["hide-label"] ? "sr-only" : "")=label
    //- Ícone
    +input-icon(label)(icon = attributes.icon
      id = attributes.id
      type = attributes.type
      class = attributes.class
      placeholder = attributes.placeholder
      disabled = attributes.disabled
      data-input = attributes.datainput)
    //- Input de busca
    if attributes.type == "search"
      +button(aria-label="Buscar")
        +icon.fa-search
    //- Input password
    if attributes.type == "password"
      +button(aria-label="Mostrar senha")
        +icon.fa-eye
    //- Dentro de select
    if attributes.select
      +button(aria-label="Exibir lista" tabindex="-1" data-trigger)
        +icon.fa-angle-down
    if block
      block

mixin input-inline(label="Label / Rótulo")
  div(class=[prefix + "input", "input-inline", attributes.class])
    .input-label: label.text-nowrap(for = attributes.id)=label
    .input-content
      //- Ícone
      +input-icon(label)(icon = attributes.icon
        id = attributes.id
        type = attributes.type
        class = attributes.class
        placeholder = attributes.placeholder
        disabled = attributes.disabled
        data-input = attributes.datainput)
      if block
        block

mixin input-icon(label)
  if attributes.icon
    .input-group
      .input-icon(aria-label = attributes.label): +icon(class = attributes.icon)
      input(
        id = attributes.id
        type = attributes.type ? attributes.type : "text"
        class = attributes.class
        placeholder = attributes.placeholder ? attributes.placeholder : "Placeholder"
        disabled = attributes.disabled
        data-input = attributes.dataInfo ? attributes.dataInfo : attributes["data-input"])
  //- Sem ícone
  else
    input(
      id = attributes.id
      type = attributes.type ? attributes.type : "text"
      placeholder = attributes.placeholder ? attributes.placeholder : "Placeholder"
      disabled = attributes.disabled
      data-input = attributes["data-input"])

mixin input-default
  +input()(id = attributes.id ? attributes.id : "input-default")
    p Texto auxiliar. Função de previnir erros.

