mixin skiplink
  - let classList = [prefix +'skiplink', attributes.class]
  nav(class=classList)
    if block
      block

mixin skiplink-full
  +skiplink.full
    if block
      block

mixin skiplinks
  +skiplink
    +item(href="#main-content" accesskey="1")
      | Ir para o conteúdo (1/4) <span class="br-tag text ml-1">1</span>
    +item(href="#header-navigation" accesskey="2")
      | Ir para o menu (2/4) <span class="br-tag text ml-1">2</span>
    +item(href="#main-searchbox" accesskey="3")
      | Ir para a busca (3/4) <span class="br-tag text ml-1">3</span>
    +item(href="#footer" accesskey="4")
      | Ir para o rodapé (4/4) <span class="br-tag text ml-1">4</span>

mixin skiplinks-full
  +skiplink-full
    +item(href="#main-content" accesskey="1")
      | Ir para o conteúdo <span class="br-tag text ml-1">1</span>
    +item(href="#header-navigation" accesskey="2")
      | Ir para o menu <span class="br-tag text ml-1">2</span>
    +item(href="#main-searchbox" accesskey="3")
      | Ir para a busca <span class="br-tag text ml-1">3</span>
    +item(href="#footer" accesskey="4")
      | Ir para o rodapé <span class="br-tag text ml-1">4</span>
