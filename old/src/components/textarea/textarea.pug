mixin textarea(label)
  - let className = [prefix + "textarea", attributes.class]
  div(class=className
      data-success = attributes.dataSuccess
      data-danger = attributes.dataDanger
      data-warning = attributes.dataWarning
      data-info = attributes.dataInfo)
    if label
      label(for=attributes.id)=label
      textarea(id=attributes.id placeholder=attributes.placeholder disabled=attributes.disabled aria-label=attributes.ariaLabel)
    if block
      block

mixin textarea-left(label)
  - let className = attributes.class
  - let componentClass = prefix + "textarea"
  - className = componentClass
  div(class=className
      data-success = attributes.dataSuccess
      data-danger = attributes.dataDanger
      data-warning = attributes.dataWarning
      data-info = attributes.dataInfo)
    .row
      .col-auto.pt-half
        if label
          label(for=attributes.id)=label
      .col
        textarea(id=attributes.id placeholder=attributes.placeholder disabled=attributes.disabled aria-label=attributes.ariaLabel)
        if block
          block

mixin textarea-counter(label)
  - let className = [prefix + "textarea", attributes.class]
  div(class=className
      data-success = attributes.dataSuccess
      data-danger = attributes.dataDanger
      data-warning = attributes.dataWarning
      data-info = attributes.dataInfo)
    if label
      label(for=attributes.id)=label
      textarea(id=attributes.id placeholder=attributes.placeholder disabled=attributes.disabled aria-label=attributes.ariaLabel maxlength = attributes.maxlength)
      div.text-base.mt-1
        span.limit Limite máximo de <strong>#{attributes.maxlength ? attributes.maxlength : 300}</strong> caracteres
        span.current
    if block
      block

