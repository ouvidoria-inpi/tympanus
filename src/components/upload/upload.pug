mixin upload()
  - let classComponent = prefix + 'upload'
  - let className = attributes.class ? classComponent + ' ' + attributes.class : classComponent
  - let id = attributes.id ? attributes.id : 'upload'

  div(class=classComponent
    data-success = attributes.dataSuccess
    data-danger = attributes.dataDanger
    data-warning = attributes.dataWarning
    data-info = attributes.dataInfo
    disabled=attributes.disabled)
    if (attributes.multiple)
      label.upload-label(for=id)
        span='Envio de 1 arquivo'
    else
      label.upload-label(for=id)
        span='Envio de vários arquivos'

    input.upload-input(
      id=id,
      type="file",
      multiple=attributes.multiple,
    )

    .upload-list

mixin upload-single
  +upload.dragging#single-file

mixin upload-multiple
  +upload()(id="multiple-files" multiple)
  p.text-base.mt-1 Clique ou arraste os arquivos para cima do componente Upload.

mixin upload-feedback
  +upload()(dataDanger)
  +feedback-danger.mt-1 Os arquivos devem ser no formato PNG ou JPG e ter no máximo 100MB.

mixin upload-disabled
  +upload()(id="disabled" disabled)
