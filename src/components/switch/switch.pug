mixin switch(label="Label")
  - let className = [prefix + "switch", attributes.class]
  div(class=className)
    input( id=attributes.id type="checkbox" aria-label=attributes.ariaLabel checked=attributes.checked disabled=attributes.disabled)
    label(for=attributes.id)=label
    if block
      block
mixin switch-default
  +switch("Label")#switch-default(checked)

mixin switch-disabled
  +switch("switch desativado")#switch-disabled.disabled(checked disabled)

mixin switch-small
  +switch("Pequeno").small.mr-5#switch-small(checked)
