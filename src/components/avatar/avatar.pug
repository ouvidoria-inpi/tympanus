mixin avatar
  - let className = prefix + "avatar"
  - let title = attributes.title ? attributes.title : "Fulano da Silva"
  span(class=className title=title)&attributes(attributes)
    if block
      block

mixin avatar-icon
  +avatar&attributes(attributes)
    span.content
      +icon.fa-user
    if block
      block

mixin avatar-image
  +avatar&attributes(attributes)
    span.content
      img(src="https://picsum.photos/id/823/400" alt="Avatar")
    if block
      block

mixin avatar-dropdown
  div
    +sign-in#avatar-dropdown-trigger(data-toggle="dropdown" data-target="avatar-menu" aria-label="Avatar com dropdown")
      +avatar
        span.content.bg-orange-vivid-30.text-pure-0 F
      span.ml-2.text-gray-80.text-weight-regular Olá, <span class="text-weight-semi-bold">Fulano</span>
      +icon.fa-caret-down
    +list#avatar-menu(hidden)
      +item(href="javascript:void(0)") Dados pessoais
      +item(href="javascript:void(0)") Privacidade
      +item(href="javascript:void(0)") Notificações
      +item(href="javascript:void(0)") Perguntas frequentes
