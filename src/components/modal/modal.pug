mixin modal
	- var className=attributes.class;
	.br-modal(class=className)
		//- .br-card
		.container-fluid.p-1.p-sm-4
			if block
				block

mixin modal-header(title)
	.br-modal-header(class=attributes.class)
		.br-modal-title(title=title)=title
		if block
			block

mixin modal-body
	.br-modal-body(class=attributes.class loading=attributes.loading)
		if block
			block

mixin modal-footer
	- var className=attributes.class
	.br-modal-footer(class=className ? className : "justify-content-end")
		if block
			block

mixin modal-close
	+button.close.circle.small(type="button" data-dismiss="br-modal" aria-label="Close")
		+icon.fa-times

mixin modal-alert
	+modal
		+modal-header("Retornar para página inicial?")
		+modal-body
			p Você está sendo redirecionado para a página inicial do sistema
		+modal-footer
			+button.secondary.small.m-2 Cancelar
			+button.primary.small.m-2 Retornar

mixin modal-acao
	+modal
		+modal-header("Retornar para página inicial?")
			+modal-close
		+modal-body
			p  Você está sendo redirecionado para a página inicial do sistema
		+modal-footer
