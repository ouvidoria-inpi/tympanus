mixin modal
  - var className = prefix + 'modal';
  .div(class=className)&attributes(attributes)
    if block
      block

mixin modal-header(title)
  .br-modal-header=title
    if block
      block

mixin modal-body
  .br-modal-body&attributes(attributes)
    if block
      block

mixin modal-footer
  - var className=attributes.class
  .br-modal-footer&attributes(attributes)
    if block
      block

mixin modal-close
  +button.close.circle(data-dismiss="br-modal" aria-label="Close")
    +icon.fa-times

mixin modal-alert
  +modal.medium
    +modal-header("Título da modal")
      +modal-close
    +modal-body
      p Lorem ipsum dolor sit amet consectetur adipisicing elit. Temporibus commodi laboriosam vel sequi quam deleniti, laborum mollitia blanditiis dolores officiis nulla quos dolorem repellat in nisi alias nesciunt fugit. Similique!
    +modal-footer.justify-content-end
      +button.secondary Ação 1
      +button.primary.ml-2 Ação2

mixin modal-acao
  +modal.medium
    +modal-header("Retornar para página inicial?")
      +modal-close
    +modal-body
      p  Você está sendo redirecionado para a página inicial do sistema
    +modal-footer
      +button.secondary Ação 1
      +button.primary.ml-2 Ação 2

mixin modal-titulo-linhas
  +modal.small
    +modal-header("")
      .modal-title Título do modal de exemplo com uso de duas linhas, título do modal de exemplo com uso de duas linhas
      +modal-close
    +modal-body
      p  Texto com duas linhas Lorem ipsum dolor sit amet, consectetur adipiscing elit.
    +modal-footer.justify-content-center
      +button.secondary Ação 1
      +button.primary.ml-2 Ação 2

mixin modal-loading
  +modal.xsmall
    +modal-body.loading.medium
    +modal-footer.justify-content-around
      +button.secondary Cancelar

mixin modal-sem-titulo
  +modal.medium
    +modal-body
      p Modal de alerta sem título Lorem ipsum dolor sit amet, consectetur adipiscing elit.
    +modal-footer.justify-content-end
      +button.secondary Ação 1
      +button.primary.ml-2 Ação 2

mixin modal-options
  +modal.small
    +modal-header("Título")
      +modal-close
    +modal-body
      +radio("Fotos")(id="op-fotos" class="d-block" name="op")
      +radio("Filmes")(id="op-filmes" class="d-block mt-1" name="op" checked)
      +radio("Áudio")(id="op-audio" class="d-block mt-1" name="op")
      +radio("Todas")(id="op-todas" class="d-block mt-1" name="op")
    +modal-footer.justify-content-center
      +button.secondary Ação 1
      +button.primary.ml-2 Ação 2


mixin modal-login
  +modal.large
    +modal-header("Título")
      +modal-close
    +modal-body
      +select("Domínio da autenticação")(id="auth-dominio")
        +option("GOV.BR", Math.floor(Math.random() * 1000))
      .mt-3: +input("Usuário")(id="auth-usuario" placeholder="Insira um texto")
      .mt-3: +input-password
    +modal-footer.justify-content-center
      +button.secondary Cancelar
      +button.primary.ml-2(disabled) Finalizar

mixin modal-list
  +modal.xsmall
    +modal-header("Título")
      +modal-close
    +modal-body
      +list
        +item(href="javascript:void(0)")
          .row.align-items-center
            .col-auto
              img(src="https://picsum.photos/40/40" alt="imagem de exemplo 1").rounded
            .col Opção 1
        +divider
        +item(href="javascript:void(0)")
          .row.align-items-center
            .col-auto
              img(src="https://picsum.photos/40/40" alt="imagem de exemplo 1").rounded
            .col Opção 2
        +divider
        +item(href="javascript:void(0)")
          .row.align-items-center
            .col-auto
              img(src="https://picsum.photos/40/40" alt="imagem de exemplo 1").rounded
            .col Opção 3


