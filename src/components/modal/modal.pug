mixin modal-titulo-linhas
	+modal
		+modal-header("Título do modal de exemplo com uso de duas linhas, título do modal de exemplo com uso de duas linhas")
			+modal-close
		+modal-body
			p  Texto com duas linhas Lorem ipsum dolor sit amet, consectetur adipiscing elit.
		+modal-footer
			+button.secondary.small.m-2 Ação 1
			+button.primary.small.m-2 Ação 2

mixin modal-loading
	+modal(class="is-xsmall")
		+modal-body(class="align-center is-loading")
		+modal-footer(class="justify-content-around")
			+button.secondary.small.m-2 Cancelar

