mixin datetimepicker(label="Label")
  // [html-validate-disable input-attributes]
  div(class="br-datetimepicker" data-mode=attributes.mode data-type=attributes.type datetimepicker-config=attributes.dataconfig  )
    - let disabled = attributes["class"].includes('disabled') ? 'disabled' : null
    +input(label)(id=attributes.id placeholder=attributes.placeholder title="digite somente numero" type=attributes.type class=attributes.class disabled=disabled datetimepicker="true" ariadescribedby=attributes.ariadescribedby   datainput)
      +button.circle.small(aria-label="Abrir Timepicker" data-toggle type='button' id=attributes.id + "-btn" disabled=disabled tabindex=-1 aria-hidden="true" )
        if (attributes.type === "time")
          +icon.fa-clock
        else
          +icon.fa-calendar-alt

//- DateTimePicker simples
mixin datetimepicker-simple
  +datetimepicker("Datepicker")(id="simples-input" type="text" placeholder="exemplo: 02/02/2024" mode="single" aria-description="dia/mês/ano somente numero" aria-placeholder="dia mes ano" class="has-icon")&attributes(attributes)

//- DateTimePicker com texto auxiliar
mixin datetimepicker-simple-textaux
  +datetimepicker("Datepicker com texto auxiliar")(id="simples-input-aux" type="text" placeholder="exemplo: 02/02/2024" mode="single" ariadescribedby="auxidatetime" class="has-icon")&attributes(attributes)
  P#auxidatetime Informe o dia com dois dígitos, mês com dois dígitos e ano com quatro dígitos

mixin datetimepicker-simple-custom
  +datetimepicker("Datepicker customizada")(id="simples-input-custom" type="text" placeholder="exemplo: 02/02/2024" mode="single" dataconfig="minDate: '15/04/2022'" class="has-icon")&attributes(attributes)

//- DateTimePicker com intervalo de datas
mixin datetimepicker-range
  +datetimepicker("Datepicker com range com a data inicial de 15/04/2022")(id="range-input" type="text" placeholder="exemplo: 02/02/2024 até 03/02/2025" mode="range" class="has-icon" datetimepicker-config="{minDate: '15/04/2022',}")&attributes(attributes)

//- Timepicker
mixin datetimepicker-time
  +datetimepicker("Datepicker com hora")(id="timepicker-input" type="time" placeholder="exemplo: 02:40" mode="single" class="has-icon")&attributes(attributes)

//- DatePicker + Timepicker
mixin datetimepicker-dateandtime
  +datetimepicker("Datepicker com data e hora")(id="dateandtime-input" type="datetime-local" placeholder="exemplo: 02/02/2024 02:02" mode="single" class="has-icon")&attributes(attributes)

