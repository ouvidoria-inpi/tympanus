mixin notification
  - let className = prefix + 'notification'
  div(class=className)&attributes(attributes)
    if block
      block

mixin notification-header
  .notification-header
    if block
      block

mixin notification-body
  .notification-body
    if block
      block

mixin notification-full
  - let id = Math.floor(Math.random() * 100000);
  +notification
    +notification-header
      .row
        .col-10
          span.text-bold Fulano da Silva
          br
          small nome.sobrenome@dominio.gov
        .col-2
          .close.text-right
            +button.circle.small(aria-label="Fechar")
              +icon.fa-times
    +notification-body
      +tab
        +tab-nav
          +tab-item(data-panel=attributes.id ? `${attributes.id}-1` : `notification-panel-1-${id}` class="notification-tooltip" tooltip-text="Alertas" aria-label="Alertas")
            +icon.fa-bell
          +tab-item(data-panel=attributes.id ? `${attributes.id}-2` : `notification-panel-2-${id}` class="notification-tooltip"  tooltip-text="Mensagens" aria-label="Mensagens").active
            +icon.fa-envelope
        +tab-content
