//- Mixin para reusar componente Radio
mixin radio(label)
  - const component = 'radio'
  - const labeless = attributes.labeless ? 'sr-only' : '';
  - const random = Math.floor((Math.random() * 1000000) + 1);
  - const id = attributes.id ? attributes.id + '-' + random : 'radio-' + random;
  div(class=[prefix + component, attributes.class], id=attributes.id)
    input(id=id, type='radio', value=attributes.value, name=attributes.name, checked=attributes.checked, disabled=attributes.disabled)
    label(for=id)
      span.overlay
      span.content(class=labeless)=label

//- Mixin para reusar no Select
mixin option-radio(label)
  +radio(label).item(name=attributes.name, class=attributes.class, value=attributes.value, checked=attributes.checked)
