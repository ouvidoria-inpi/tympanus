mixin header
  header.br-header&attributes(attributes)
    div(class=grid ? grid : "container-lg")
      +header-top
      if block
        block
      else
        +header-bottom(title,subtitle)

mixin header-top
  .header-top
    +header-logo
    .header-actions
      +header-links
      +header-functions
      .header-search-trigger
        +button.circle(aria-label="Abrir Busca" data-toggle="search" data-target=".header-search")
          +icon.fa-search
      +header-login

mixin header-bottom(title="Título do Header", subtitle="Subtítulo do Header", id="navigation")
  .header-bottom
    .header-menu
      .header-menu-trigger
        +button.small.circle(aria-label="Menu" data-toggle="menu" data-target="#main-navigation" id=id)
          +icon.fa-bars
      .header-info
        .header-title #{title}
        .header-subtitle #{subtitle}
    .header-search
      +input("Texto da pesquisa")(id=`searchbox-${Math.floor((Math.random() * 100000) + 1)}` type="text" class="has-icon" placeholder="O que você procura?")
        +button.circle.small(type='button' aria-label="Pesquisar")
          +icon.fa-search
      +button.circle.search-close.ml-1(aria-label="Fechar Busca" data-dismiss="search")
        +icon.fa-times

mixin header-logo
  .header-logo
    img(src="data:image/png;base64," alt="logo")
    +divider.vertical.mx-half.mx-sm-1
    .header-sign Assinatura

mixin header-links
  .header-links.dropdown
    +button.circle.small(data-toggle="dropdown" aria-label="Abrir Acesso Rápido")
      +icon.fa-ellipsis-v
    +list
      +list-header("Acesso Rápido")
      +item(href="javascript:void(0)") Link de acesso 1
      +item(href="javascript:void(0)") Link de acesso 2
      +item(href="javascript:void(0)") Link de acesso 3
      +item(href="javascript:void(0)") Link de acesso 4
  +divider.vertical.mx-half.mx-sm-1

mixin header-functions
  .header-functions.dropdown
    +button.circle.small(data-toggle="dropdown" aria-label="Abrir Funcionalidades do Sistema")
      +icon.fa-th
    +list
      +list-header("Funcionalidades do Sistema")
      +item
        +button.circle.small(aria-label="Funcionalidade 1")
          +icon.fa-chart-bar
          span.text Funcionalidade 1
      +item
        +button.circle.small(aria-label="Funcionalidade 2")
          +icon.fa-headset
          span.text Funcionalidade 2
      +item
        +button.circle.small(aria-label="Funcionalidade 3")
          +icon.fa-comment
          span.text Funcionalidade 3
      +item
        +button.circle.small(aria-label="Funcionalidade 4")
          +icon.fa-adjust
          span.text Funcionalidade 4

mixin header-login
  .header-login
    .header-sign-in
      +sign-in.small(data-trigger="login")
        +icon.fa-user
        span.d-sm-inline Entrar
    .header-avatar.d-none
      .avatar.dropdown
        +avatar-image
        +button.circle.small(aria-label="Abrir Menu de usuário" data-toggle="dropdown")
          +icon.fa-angle-down
        +notification-full

mixin header-sticky(title="Título do Header")
  +header()(data-sticky)
    +header-bottom(title,subtitle, id="menu-sticky")

mixin header-compact(title="Título do Header")
  +header.compact
    +header-bottom(title,subtitle, id="menu-compact")

mixin header-large(title="Título do Header")
  +header.large
    +header-bottom(title,subtitle, id="menu-large")

mixin header-small(title="Título do Header")
  +header.small
    +header-bottom(title,subtitle, id="menu-small")
